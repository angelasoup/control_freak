<%- view_title "Families | #{@family.acronym} - #{@family.name}" %>

<% content_for :main do %>
<div class="row">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <h1 class="page-header"><%= @family.acronym %> - <%= @family.name %></h1>
    <p class="lead"></p>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 table-responsive">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th class="col-xs-3 col-sm-3 col-md-3 col-lg-3">SSP</th>
          <th class="col-xs-7 col-sm-7 col-md-7 col-lg-7">System name</th>
          <th class="col-xs-2 col-sm-2 col-md-2 col-lg-2">Updated</th>
        </tr>
      </thead>
      <tbody>
        <% @systems.each do |system_record| %>
        <tr>
          <td><%= link_to(system_record.ssp, system_path(system_record.ssp)) %></td>
          <td><%= system_record.system_name %></td>
          <td><%= system_record.updated_at.strftime("%F") %></td>
        </tr>
        <% end %>
      </tbody>
      <tfoot>
      </tfoot>
    </table>
  </div>

</div>
<% end %>
